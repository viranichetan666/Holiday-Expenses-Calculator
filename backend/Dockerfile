#
# Build the docker image with `npx nx docker-build bunk-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t bunk-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system bunk-server && \
          adduser --system -G bunk-server bunk-server

COPY dist/bunk-server bunk-server
RUN chown -R bunk-server:bunk-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix bunk-server --omit=dev -f install

CMD [ "node", "bunk-server" ]
